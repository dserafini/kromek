#/analysis/ntuple/setActivation 5 True

# initalize if not done in the main
/run/initialize

################################################################################
# choose gps source
################################################################################
/gps/particle gamma
/gps/pos/type Plane
/gps/pos/shape Square
/gps/pos/halfx .8 cm
/gps/pos/halfy .8 cm
/gps/direction 0 0 1
/gps/energy {gammaEnergy} keV

/control/alias nEvents 1000000
/run/printProgress 100000

/analysis/setFileName gamma{gammaEnergy}keVcollimatedGR05_{nEvents}events.root
/run/beamOn {nEvents}